<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtMeetingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="PartiAtMeeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aktuAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktueller Agendapunkt"
        app:layout_constraintEnd_toStartOf="@+id/txtVerbleibendeGesamtzeit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtVerbleibendeGesamtzeit" />

    <TextView
        android:id="@+id/txtAktuSprecher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="aktueller Sprecher"
        app:layout_constraintBottom_toBottomOf="@+id/txtVerbleibendeSprechZeit"
        app:layout_constraintEnd_toEndOf="@+id/aktuAP"
        app:layout_constraintStart_toStartOf="@+id/aktuAP"
        app:layout_constraintTop_toBottomOf="@+id/aktuAP" />

    <TextView
        android:id="@+id/txtVerbleibendeGesamtzeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restzeit Meeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtMeetingTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtMeetingTitle" />

    <TextView
        android:id="@+id/txtVerbleibendeAPZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restzeit AP"
        app:layout_constraintEnd_toEndOf="@+id/txtVerbleibendeGesamtzeit"
        app:layout_constraintStart_toStartOf="@+id/txtVerbleibendeGesamtzeit"
        app:layout_constraintTop_toBottomOf="@+id/txtVerbleibendeGesamtzeit" />

    <TextView
        android:id="@+id/txtVerbleibendeSprechZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restzeit Sprecher"
        app:layout_constraintEnd_toEndOf="@+id/txtVerbleibendeAPZeit"
        app:layout_constraintStart_toStartOf="@+id/txtVerbleibendeAPZeit"
        app:layout_constraintTop_toBottomOf="@+id/txtVerbleibendeAPZeit" />

    <Button
        android:id="@+id/btnPartiSprechenBeenden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Sprechen beenden"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyPartiPoints"
        android:layout_width="385dp"
        android:layout_height="456dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPartiSprechenBeenden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtPartiGruss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hallo User, nachfolgend die noch kommeden Agendapunkte"
        app:layout_constraintBottom_toTopOf="@+id/txtPartiSprechzeit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAktuSprecher"
        app:layout_constraintVertical_bias="0.303" />

    <TextView
        android:id="@+id/txtPartiSprechzeit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Du bist mit Sprechen dran, Deine Ã¼brige Zeit ist: 0000 Minuten"
        app:layout_constraintBottom_toTopOf="@+id/recyPartiPoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>