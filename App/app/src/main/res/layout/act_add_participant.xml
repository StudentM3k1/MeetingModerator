<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addParticipant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txtPartiMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="mail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/txtPartiLastname"
        app:layout_constraintStart_toStartOf="@+id/txtPartiLastname"
        app:layout_constraintTop_toBottomOf="@+id/txtPartiLastname" />

    <EditText
        android:id="@+id/txtPartiFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Vorname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtPartiLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nachname"
        app:layout_constraintEnd_toEndOf="@+id/txtPartiFirstName"
        app:layout_constraintStart_toStartOf="@+id/txtPartiFirstName"
        app:layout_constraintTop_toBottomOf="@+id/txtPartiFirstName" />

    <Button
        android:id="@+id/btnAddParti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/txtPartiMail"
        app:layout_constraintTop_toBottomOf="@+id/txtPartiMail" />

    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zurück"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddParti"
        app:layout_constraintStart_toStartOf="@+id/txtPartiMail"
        app:layout_constraintTop_toTopOf="@+id/btnAddParti" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teilnehmer hinzufügen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>