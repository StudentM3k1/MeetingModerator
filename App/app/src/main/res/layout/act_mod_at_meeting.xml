<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modMeetView"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtModMeetingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ModAtMeeting"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAktuAPMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktueller Agendapunkt"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtModVerbleibendeGesamtzeit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtModVerbleibendeGesamtzeit" />

    <TextView
        android:id="@+id/txtModPreOrt"
        android:layout_width="157dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:text="Aktueller Sprecher"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtAktuAPMod"
        app:layout_constraintStart_toStartOf="@+id/txtAktuAPMod"
        app:layout_constraintTop_toBottomOf="@+id/txtAktuAPMod" />

    <TextView
        android:id="@+id/txtModVerbleibendeGesamtzeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restzeit Meeting"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtModMeetingTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtModMeetingTitle" />

    <TextView
        android:id="@+id/txtModVerbleibendeAPZeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restzeit AP"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtModVerbleibendeGesamtzeit"
        app:layout_constraintStart_toStartOf="@+id/txtModVerbleibendeGesamtzeit"
        app:layout_constraintTop_toBottomOf="@+id/txtModVerbleibendeGesamtzeit" />

    <Button
        android:id="@+id/btnModNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="nächster Agendapunkt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyAPModAtMeeting"
        android:layout_width="367dp"
        android:layout_height="331dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/btnModNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtModGruss"
        android:layout_width="340dp"
        android:layout_height="21dp"
        android:text="Kommende Agendapunkte:"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtModSprechzeit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtModPreOrt"
        app:layout_constraintVertical_bias="0.431" />

    <TextView
        android:id="@+id/txtModSprechzeit"
        android:layout_width="365dp"
        android:layout_height="16dp"
        android:layout_marginBottom="36dp"
        android:text="Du bist mit Sprechen dran, Deine übrige Zeit ist: 0000 Minuten"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyAPModAtMeeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/snackbar"
        android:layout_width="395dp"
        android:layout_height="57dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModNext"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>